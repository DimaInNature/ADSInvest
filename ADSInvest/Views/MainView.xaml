<Window
    x:Class="ADSInvest.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:ADSInvest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ADSInvest.ViewModels"
    x:Name="ThisWindow"
    Title="Сотрудник"
    Width="800"
    Height="500"
    Background="Transparent"
    MouseLeftButtonDown="ThisWindow_MouseLeftButtonDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--#region Top-->

        <Grid Grid.Row="0" Background="#005b26">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image
                Width="60"
                Height="50"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                RenderOptions.BitmapScalingMode="Fant"
                Stretch="Fill">
                <Image.Source>
                    <BitmapImage
                        CacheOption="OnLoad"
                        DecodePixelHeight="400"
                        UriSource="/Content/Images/WhiteLogo.png" />
                </Image.Source>
            </Image>

            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Cambria"
                FontSize="20"
                Foreground="White"
                Text="АстДомСтрой" />

            <Button
                Grid.Column="2"
                Width="50"
                Height="30"
                Margin="0,0,30,0"
                HorizontalAlignment="Right"
                Command="{Binding LogoutButtonClickCommand}"
                CommandParameter="{Binding ElementName=ThisWindow}"
                Style="{DynamicResource ControlButtonLogoutStyle}" />

            <Button
                Grid.Column="2"
                Width="25"
                Height="25"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Command="{Binding ShutdownButtonClickCommand}"
                CommandParameter="{Binding ElementName=ThisWindow}"
                Style="{DynamicResource ControlWhiteButtonCloseStyle}" />

        </Grid>

        <!--#endregion-->

        <!--#region Body-->

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <!--#region Grid`s Area-->

            <!--#region Construction Grid-->

            <Grid x:Name="ConstructionWorkGrid" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--#region Left Menu-->

                <Grid Grid.Column="0">

                    <StackPanel>

                        <RadioButton
                            x:Name="CreateConstructionWorkRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Создать"
                            FontSize="15"
                            IsChecked="True">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                        <RadioButton
                            x:Name="ViewConstructionWorkRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Просмотреть"
                            FontSize="15"
                            IsChecked="False">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                        <RadioButton
                            x:Name="EditConstructionWorkRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Изменить"
                            FontSize="15"
                            IsChecked="False">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                        <RadioButton
                            x:Name="DeleteConstructionWorkRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Удалить"
                            FontSize="15"
                            IsChecked="False">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                    </StackPanel>

                </Grid>

                <!--#endregion-->

                <!--#region Create Grid-->

                <Grid x:Name="CreateConstructionWorkGrid" Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBox
                            Grid.Row="1"
                            Width="200"
                            Height="40"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Style="{DynamicResource ColorTextBoxStyle}"
                            Tag="Улица"
                            Text="{Binding ConstructionWorkAddress}" />

                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            Height="40"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            FontSize="17"
                            Style="{DynamicResource ColorTextBoxStyle}"
                            Tag="Название объекта"
                            Text="{Binding ConstructionWorkName}" />

                        <DatePicker
                            Grid.Row="3"
                            Width="200"
                            Height="40"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            FontSize="15"
                            SelectedDate="{Binding ConstructionWorkEndDate}"
                            Style="{DynamicResource DatePickerStyle}"
                            Tag="Дата завершения" />

                    </Grid>

                    <Grid Grid.Column="1">

                        <TextBlock
                            Width="95"
                            Height="25"
                            Margin="0,45,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="20"
                            Foreground="#005b26"
                            Text="Заказчики" />

                        <ListBox
                            Height="200"
                            Margin="10,0,10,0"
                            ItemsSource="{Binding Clients}"
                            SelectedItem="{Binding CreateConstructionWorkClientSelectedItem}">

                            <ListBox.ItemTemplate>
                                <DataTemplate>

                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontSize="13"
                                            Foreground="#454545"
                                            Text="{Binding FullName}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            FontSize="13"
                                            Foreground="#454545"
                                            Text="{Binding Phone}" />

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>

                    </Grid>

                    <Button
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="160"
                        Height="37"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Command="{Binding CreateConstructionWorkButtonClickCommand}"
                        Content="Создать"
                        FontSize="15"
                        Style="{DynamicResource ButtonStyle}" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                </Grid>

                <!--#endregion-->

                <!--#region View Grid-->

                <Grid x:Name="ViewConstructionWorkGrid" Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Width="70"
                        Height="30"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Text="Работы" />

                    <ListBox
                        Grid.Column="0"
                        Margin="50,50,50,0"
                        ItemsSource="{Binding ConstructionWorks}"
                        SelectedItem="{Binding ViewConstructionWorkSelectedItem}">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding ViewConstuctionWorksListBoxItemMouseLeftButtonUpCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <ListBox.ItemTemplate>
                            <DataTemplate>

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Status}" />

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding EndDateString}" />

                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Address}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Client.FullName}" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <TextBlock
                        Grid.Column="1"
                        Width="80"
                        Height="30"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Text="Рабочие" />

                    <ListBox
                        Grid.Column="1"
                        Margin="50,50,50,0"
                        ItemsSource="{Binding WorkersInConstructionWorks}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>

                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding FullName}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Specialization}" />

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding ContactInformation}" />

                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding IdConstructionWork}" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                </Grid>

                <!--#endregion-->

                <!--#region Edit Grid-->

                <Grid x:Name="EditConstructionWorkGrid" Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>

                    <ListBox
                        Grid.Row="0"
                        ItemsSource="{Binding ConstructionWorks}"
                        SelectedItem="{Binding UpdateConstructionWorkSelectedItem}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Status}" />

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding EndDateString}" />

                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Address}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Client.FullName}" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <TextBox
                        Grid.Row="1"
                        Width="200"
                        Height="40"
                        Margin="0,0,450,0"
                        HorizontalAlignment="Center"
                        Style="{DynamicResource ColorTextBoxStyle}"
                        Tag="Статус"
                        Text="{Binding ConstructionWorkStatus}" />

                    <Button
                        Grid.Row="1"
                        Width="200"
                        Height="40"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateConstructionWorkButtonClickCommand}"
                        Content="Сохранить"
                        Style="{DynamicResource ButtonStyle}" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                </Grid>

                <!--#endregion-->

                <!--#region Delete Grid-->

                <Grid x:Name="DeleteConstructionWorkGrid" Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <ListBox
                        Grid.Row="0"
                        ItemsSource="{Binding ConstructionWorks}"
                        SelectedItem="{Binding DeleteConstructionWorkSelectedItem}">

                        <ListBox.ItemTemplate>
                            <DataTemplate>

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Status}" />

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding EndDateString}" />

                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Address}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        FontSize="13"
                                        Foreground="#454545"
                                        Text="{Binding Client.FullName}" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <Button
                        Grid.Row="1"
                        Width="150"
                        Height="40"
                        Command="{Binding DeleteConstructionWorkButtonClickCommand}"
                        Content="Удалить"
                        FontSize="15"
                        Style="{DynamicResource ButtonStyle}" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=CreateConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ViewConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=DeleteConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=EditConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                </Grid>

                <!--#endregion-->

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=ConstructionWorkRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=WorkerRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=WarehouseRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=ReportRadioButton, Path=IsChecked}" Value="true">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

            </Grid>

            <!--#endregion-->

            <!--#region Worker Grid-->

            <Grid x:Name="WorkerlGrid" Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--#region Left Menu-->

                <Grid Grid.Column="0">

                    <StackPanel>

                        <RadioButton
                            x:Name="CreateWorkerRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Создать"
                            FontSize="15"
                            IsChecked="True">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=ViewWorkerRadioButton, Path=IsChecked}" Value="True">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=DeleteWorkerRadioButton, Path=IsChecked}" Value="True">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                        <RadioButton
                            x:Name="ViewWorkerRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Просмотреть"
                            FontSize="15"
                            IsChecked="False">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=CreateWorkerRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=DeleteWorkerRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                        <RadioButton
                            x:Name="DeleteWorkerRadioButton"
                            Grid.Column="0"
                            Height="30"
                            Margin="5"
                            Content="Удалить"
                            FontSize="15"
                            IsChecked="False">

                            <RadioButton.Style>
                                <Style BasedOn="{StaticResource MenuRadioButton}" TargetType="RadioButton">

                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=CreateWorkerRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ViewWorkerRadioButton, Path=IsChecked}" Value="true">
                                            <Setter Property="IsChecked" Value="False" />
                                        </DataTrigger>

                                    </Style.Triggers>

                                </Style>
                            </RadioButton.Style>

                        </RadioButton>

                    </StackPanel>

                </Grid>

                <!--#endregion-->

                <!--#region Create Grid-->

                <Grid
                    x:Name="CreateWorkerGrid"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBox
